public class MyClass {
    
    
    public static void main(String args[]) {
    
int z=1;

for (int i =1 ; i<=5 ; i++){
   
    
if (i%2!=0){
    
       for (int j=1; j <=3; j++){



  System.out.print(z++ + " ");

  
  
} 
   z=z+2;

  System.out.println(); 
}



if (i%2==0){
    
       for (int j=1; j <=3; j++){



  System.out.print(z-- + " ");

  
  
} 
z=z+4;

  System.out.println();
    
}



}


    }
    
}

