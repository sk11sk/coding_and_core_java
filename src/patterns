public class MyClass {
    
    
    public static void main(String args[]) {
    

for (int i =1 ; i<=5 ; i++){
   
   int z=i-1; 


     for (int j=1; j <=i; j++){



      System.out.print(j);

  
  
}
 for (int j=1; j <=i-1; j++){



       System.out.print(z--);
  
      
    
  
}


  System.out.println();

}

    }
    
}

