public class MyClass {
    
    
    public static void main(String args[]) {
 

for (int i = 1 ; i <=5 ; i++){
   
  System.out.print(i+" ");
  
  
  int z=4;
  int k=i;
  
  
 
     for (int j=1; j <i; j++){
         
         

     k=k+z;
     
      System.out.print(k+" "); 
      z--;
  
}

  System.out.println();

}

    }
    
}

