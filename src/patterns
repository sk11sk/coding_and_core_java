public class MyClass {
    
    public static void main(String args[]) {
    int z =1;

for (int i =1; i<=4 ; i++){
   
    

     for (int j=1; j <=i; j++){


  System.out.print(z);
  z++;
  
}

  System.out.println();

}
    }
    
}

