public class MyClass {
    
    
    public static void main(String args[]) {
    

for (int i =1 ; i<=5 ; i++){
   
    
int z=i;

     for (int j=1; j <=i; j++){



  System.out.print(z);
  z--;
  
  
}

  System.out.println();

}

    }
    
}

