public class MyClass {
    
    
    public static void main(String args[]) {
    

for (int i =1 ; i<=5 ; i++){
   
    


     for (int j=i; j >=1; j--){



  System.out.print("*");

  
  
}

  System.out.println();

}

    }
    
}

